<% provide(:title, 'Vehicles') %>

<h1>Vehicles</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Vehicle class</th>
      <th>Cargo capacity</th>
      <th>Consumables</th>
      <th>Crew</th>
      <th>Length</th>
      <th>Passengers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr class="clickable-row" data-href="<%= vehicle_path(vehicle) %>">
        <td><%= vehicle.name %></td>
        <td><%= vehicle.manufacturer %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.veh_class.name %></td>
        <td><%= vehicle.cargo_capacity %></td>
        <td><%= vehicle.consumables %></td>
        <td><%= vehicle.crew %></td>
        <td><%= vehicle.length %></td>
        <td><%= vehicle.passengers %></td>
      </tr>
    <% end %>
  </tbody>
</table>
