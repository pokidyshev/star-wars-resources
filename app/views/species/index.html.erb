<p id="notice"><%= notice %></p>

<h1>Species</h1>

<table>
  <thead>
    <tr>
      <th>Average height</th>
      <th>Average lifespan</th>
      <th>Classifiation</th>
      <th>Designation</th>
      <th>Eye colors</th>
      <th>Hair colors</th>
      <th>Language</th>
      <th>Name</th>
      <th>Skin colors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @species.each do |species| %>
      <tr>
        <td><%= species.average_height %></td>
        <td><%= species.average_lifespan %></td>
        <td><%= species.classifiation %></td>
        <td><%= species.designation %></td>
        <td><%= species.eye_colors %></td>
        <td><%= species.hair_colors %></td>
        <td><%= species.language %></td>
        <td><%= species.name %></td>
        <td><%= species.skin_colors %></td>
        <td><%= link_to 'Show', species %></td>
        <td><%= link_to 'Edit', edit_species_path(species) %></td>
        <td><%= link_to 'Destroy', species, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

